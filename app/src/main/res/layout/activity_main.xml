<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lista1"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no items selected"
            android:id="@+id/textView"
            app:layout_constraintBottom_toBottomOf="@id/lista1"
            app:layout_constraintLeft_toLeftOf="@id/lista1"
            app:layout_constraintRight_toRightOf="@id/lista1"
            app:layout_constraintTop_toTopOf="@id/lista1"/>


</androidx.constraintlayout.widget.ConstraintLayout>